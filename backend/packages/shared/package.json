{
  "name": "shared",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": true,
  "scripts": {
    "db:push:catalogue": "yarn prisma db push --schema ./src/databases/catalogue/schema.prisma",
    "db:push:users": "yarn prisma db push --schema ./src/databases/users/schema.prisma",
    "db:push:ugc": "yarn prisma db push --schema ./src/databases/ugc/schema.prisma",

    "db:client:catalogue": "yarn prisma generate --schema ./src/databases/catalogue/schema.prisma",
    "db:client:users": "yarn prisma generate --schema ./src/databases/users/schema.prisma",
    "db:client:ugc": "yarn prisma generate --schema ./src/databases/ugc/schema.prisma",

    "db:client:all": "yarn db:client:ugc && yarn db:client:catalogue && yarn db:client:users",
    "db:pushall": "yarn db:push:catalogue && yarn db:push:users && yarn db:push:ugc",

    "build": "yarn db:client:all && ./node_modules/.bin/tsc -p ./tsconfig.json && mkdir -p ./dist/databases/generated && cp -r ./src/databases/generated/ ./dist/databases/",
    "dev": "yarn build",
    "clean": "rm -rf node_modules && rm -rf .turbo && rm -rf dist"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "config": "*",
    "express": "^4.17.3",
    "joi": "^17.6.0",
    "prisma": "^3.12.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.25",
    "tsconfig": "*",
    "typescript": "^4.6.3"
  }
}
