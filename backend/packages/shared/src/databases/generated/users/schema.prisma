datasource db {
  provider = "postgresql"
  url      = env("USERS_DB_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "../generated/users"
}

model address {
  addressId     String @id @default(uuid())
  userId        Int
  name          String
  phoneNumber   String
  email         String
  streetAddress String
  city          String
  state         String
  zip           String
  user          user  @relation(fields: [userId], references: [userId], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId])
}

model user {
  userId      Int         @id @default(autoincrement())
  name        String
  email       String      @unique
  password    String
  phoneNumber String?     @unique
  flags       BigInt
  createdAt   DateTime    @db.Timestamptz(6)
  addresses   address[]
  sessions    session[]
}


model session {
  sessionId  String   @id @default(uuid())
  userId     Int
  createdAt  DateTime @db.Timestamptz(6)
  lastUsedAt DateTime @db.Timestamptz(6)
  user       user    @relation(fields: [userId], references: [userId], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId])
}